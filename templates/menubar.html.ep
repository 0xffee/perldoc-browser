          <div class="dropdown-divider"></div>
% foreach my $perl_option (@$perl_versions) {
          <a class="dropdown-item" href="/<%= $perl_option %>/<%= $current_path %>"><%= $perl_option %></a>
% }
        </div>
      </li>
