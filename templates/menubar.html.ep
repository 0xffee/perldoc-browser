      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="dropdownlink-dev" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dev</a>
        <div class="dropdown-menu" aria-labelledby="dropdownlink-dev">
%   foreach my $perl_option (@$dev_perl_versions) {
          <a class="dropdown-item" href="/<%= $perl_option %>/<%= $current_path %>"><%= $perl_option %></a>
%   }
        </div>
      </li>
% }
% my $current_prefix = $url_perl_version ? "/$url_perl_version" : '';
      <li class="nav-item">
        <a class="nav-link" href="<%= $current_prefix %>/perl">perl</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= $current_prefix %>/functions">functions</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= $current_prefix %>/modules">modules</a>
